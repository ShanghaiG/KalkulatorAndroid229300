<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/buttons">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ac_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text="AC"
                android:textColor="@color/black"
                android:backgroundTint="#C8C8C8"
                android:textSize="20dp"
                app:cornerRadius="36dp"
                android:onClick="useClearAllButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/plus_minus_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text="+/-"
                android:textColor="@color/black"
                android:backgroundTint="#C8C8C8"
                android:textSize="20dp"
                app:cornerRadius="36dp"
                android:onClick="useChangeSignButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/procent_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text="%"
                android:textColor="@color/black"
                android:backgroundTint="#C8C8C8"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:onClick="useProcentButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/plus_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text="÷"
                android:textColor="@color/white"
                android:backgroundTint="#FDBA0F"
                android:textSize="32sp"
                app:cornerRadius="36dp"
                android:onClick="useDivideButton"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/seven_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text="7"
                android:textColor="@color/white"
                android:backgroundTint="#9A9A9A"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:onClick="useSevenButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/eight_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text="8"
                android:textColor="@color/white"
                android:backgroundTint="#9A9A9A"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:onClick="useEightButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/nine_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text="9"
                android:textColor="@color/white"
                android:backgroundTint="#9A9A9A"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:onClick="useNineButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/multiple_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text="×"
                android:textColor="@color/white"
                android:backgroundTint="#FDBA0F"
                android:textSize="32sp"
                app:cornerRadius="36dp"
                android:onClick="useMultiplyButton"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/four_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text="4"
                android:textColor="@color/white"
                android:backgroundTint="#9A9A9A"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:onClick="useFourButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/five_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text="5"
                android:textColor="@color/white"
                android:backgroundTint="#9A9A9A"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:onClick="useFiveButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/six_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text="6"
                android:textColor="@color/white"
                android:backgroundTint="#9A9A9A"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:onClick="useSixButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/minus_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text="−"
                android:textColor="@color/white"
                android:backgroundTint="#FDBA0F"
                android:textSize="32sp"
                app:cornerRadius="36dp"
                android:onClick="useMinusButton"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/one_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text="1"
                android:textColor="@color/white"
                android:backgroundTint="#9A9A9A"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:onClick="useOneButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/two_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text="2"
                android:textColor="@color/white"
                android:backgroundTint="#9A9A9A"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:onClick="useTwoButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/three_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text="3"
                android:textColor="@color/white"
                android:backgroundTint="#9A9A9A"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:onClick="useThreeButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/divide_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text="+"
                android:textColor="@color/white"
                android:backgroundTint="#FDBA0F"
                android:textSize="32sp"
                app:cornerRadius="36dp"
                android:onClick="usePlusButton"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">



            <com.google.android.material.button.MaterialButton
                android:id="@+id/zero_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text="0"
                android:textColor="@color/white"
                android:backgroundTint="#9A9A9A"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:onClick="useZeroButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/comma_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text=","
                android:textColor="@color/black"
                android:backgroundTint="#C8C8C8"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:onClick="usePointButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/c_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text="C"
                android:textColor="@color/black"
                android:backgroundTint="#C8C8C8"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:onClick="useClearDigitButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/equals_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text="="
                android:textColor="@color/white"
                android:backgroundTint="#FDBA0F"
                android:textSize="32sp"
                app:cornerRadius="36dp"
                android:onClick="useEqualsButton"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>