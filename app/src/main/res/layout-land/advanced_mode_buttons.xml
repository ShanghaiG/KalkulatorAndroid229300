<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/buttons">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/seven_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="122dp"
                android:layout_height="96dp"
                android:layout_margin="12dp"
                android:text="7"
                android:textColor="@color/white"
                android:backgroundTint="#9A9A9A"
                android:textSize="40dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/eight_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="122dp"
                android:layout_height="96dp"
                android:layout_margin="12dp"
                android:text="8"
                android:textColor="@color/white"
                android:backgroundTint="#9A9A9A"
                android:textSize="40dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/nine_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="122dp"
                android:layout_height="96dp"
                android:layout_margin="12dp"
                android:text="9"
                android:textColor="@color/white"
                android:backgroundTint="#9A9A9A"
                android:textSize="40dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/multiple_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="122dp"
                android:layout_height="96dp"
                android:layout_margin="12dp"
                android:text="×"
                android:textColor="@color/white"
                android:backgroundTint="#FDBA0F"
                android:textSize="40dp"
                app:cornerRadius="36dp" />



            <com.google.android.material.button.MaterialButton
                android:id="@+id/divide_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="122dp"
                android:layout_height="96dp"
                android:layout_margin="12dp"
                android:text="÷"
                android:textColor="@color/white"
                android:backgroundTint="#FDBA0F"
                android:textSize="40dp"
                app:cornerRadius="36dp" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/ac_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="122dp"
                android:layout_height="96dp"
                android:layout_margin="12dp"
                android:text="AC"
                android:textColor="@color/black"
                android:backgroundTint="#C8C8C8"
                android:textSize="40dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/c_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="122dp"
                android:layout_height="96dp"
                android:layout_margin="12dp"
                android:text="C"
                android:textColor="@color/black"
                android:backgroundTint="#C8C8C8"
                android:textSize="40dp"
                app:cornerRadius="36dp" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/four_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="122dp"
                android:layout_height="96dp"
                android:layout_margin="12dp"
                android:text="4"
                android:textColor="@color/white"
                android:backgroundTint="#9A9A9A"
                android:textSize="40dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/five_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="122dp"
                android:layout_height="96dp"
                android:layout_margin="12dp"
                android:text="5"
                android:textColor="@color/white"
                android:backgroundTint="#9A9A9A"
                android:textSize="40dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/six_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="122dp"
                android:layout_height="96dp"
                android:layout_margin="12dp"
                android:text="6"
                android:textColor="@color/white"
                android:backgroundTint="#9A9A9A"
                android:textSize="40dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/plus_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="122dp"
                android:layout_height="96dp"
                android:layout_margin="12dp"
                android:text="+"
                android:textColor="@color/white"
                android:backgroundTint="#FDBA0F"
                android:textSize="40dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/minus_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="122dp"
                android:layout_height="96dp"
                android:layout_margin="12dp"
                android:text="−"
                android:textColor="@color/white"
                android:backgroundTint="#FDBA0F"
                android:textSize="40sp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/procent_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="122dp"
                android:layout_height="96dp"
                android:layout_margin="12dp"
                android:text="%"
                android:textColor="@color/black"
                android:backgroundTint="#C8C8C8"
                android:textSize="40dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/plus_minus_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="122dp"
                android:layout_height="96dp"
                android:layout_margin="12dp"
                android:text="+/-"
                android:textColor="@color/black"
                android:backgroundTint="#C8C8C8"
                android:textSize="40dp"
                app:cornerRadius="36dp" />

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/one_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="122dp"
                android:layout_height="96dp"
                android:layout_margin="12dp"
                android:text="1"
                android:textColor="@color/white"
                android:backgroundTint="#9A9A9A"
                android:textSize="40dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/two_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="122dp"
                android:layout_height="96dp"
                android:layout_margin="12dp"
                android:text="2"
                android:textColor="@color/white"
                android:backgroundTint="#9A9A9A"
                android:textSize="40dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/three_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="122dp"
                android:layout_height="96dp"
                android:layout_margin="12dp"
                android:text="3"
                android:textColor="@color/white"
                android:backgroundTint="#9A9A9A"
                android:textSize="40dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/zero_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="270dp"
                android:layout_height="96dp"
                android:layout_margin="12dp"
                android:text="0"
                android:textColor="@color/white"
                android:backgroundTint="#9A9A9A"
                android:textSize="40dp"
                android:gravity="left|center_vertical"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/comma_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="122dp"
                android:layout_height="96dp"
                android:layout_margin="12dp"
                android:text=","
                android:textColor="@color/black"
                android:backgroundTint="#C8C8C8"
                android:textSize="40dp"
                app:cornerRadius="36dp" />



            <com.google.android.material.button.MaterialButton
                android:id="@+id/equals_button"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="122dp"
                android:layout_height="96dp"
                android:layout_margin="12dp"
                android:text="="
                android:textColor="@color/white"
                android:backgroundTint="#FDBA0F"
                android:textSize="40dp"
                app:cornerRadius="36dp" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>